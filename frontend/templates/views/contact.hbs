<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" href="/img/students-icon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/signin.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,400&display=swap" rel="stylesheet">
    <title>Contact us</title>
    <script src="https://kit.fontawesome.com/aa9fb73e01.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="signup">
        {{>menu}}
        <section class="signup__section">
            <form class="signup__form signup__form--message" action="/contact/message" method="POST" novalidate>
                {{#if success}}
                    <i class="fas fa-check-circle signup__successIcon"></i>
                    <h2 class="signup__successName">{{success}}</h2>
                {{/if}}
                <section class="signup__data">
                    <h4 class="signup__h4">Email:</h4>
                    {{#if email}}
                        <input disabled value="{{email}}" type="email" name="email" id="email" class="signup__input">
                    {{else}}
                        <input type="email" name="email" id="email" class="signup__input">
                    {{/if}}
                </section>
                <section class="signup__data">
                    <h4 class="signup__h4">Message:</h4>
                    <textarea name="message" id="message" class="signup__input" style="resize: none;" rows="5"></textarea>
                </section>
                <button class="signup__btn signup__btn--message">Send</button>
            </form>
        </section>
    </div>
    <script src="/src/contact.js"></script>
</body>
</html>