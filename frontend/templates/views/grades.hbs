<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" href="/img/students-icon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/panel.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,400&display=swap" rel="stylesheet">
    <title>Panel</title>
    <script src="https://kit.fontawesome.com/aa9fb73e01.js" crossorigin="anonymous"></script>
</head>
<body>
    {{>menu2}}
    {{>student_panel}}
    <div class="panelData">
        {{#if error}}
            <i class="fas fa-exclamation-triangle panelData__errorIcon"></i>
            <h1 class="panelData__error">{{error}}</h1>
        {{else}}
            <form action="/students/info" method="GET" class="panelData__selection">
                <select name="major" class="panelData__select">
                    {{#each majors_data as |major|}}
                        <option value="{{major.major_name}}">{{major.major_name}}</option>
                    {{/each}}
                </select>
                <select name="semester" class="panelData__select">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                </select>
                <button class="panelData__btn">Reveal</button>
            </form>
            {{#if info_error}} 
                <i class="fas fa-exclamation-triangle panelData__errorIcon"></i>
                <h1 class="panelData__error">{{info_error}}</h1>
            {{else}}
                <div>
                    {{info_data.[0]}}
                </div>
                <table class="panelData__table">
                    <tr class="panelData__tr">
                        <th class="panelData__col panelData__th">Major name</th>
                        <th class="panelData__col panelData__th">Semester number</th>
                        <th class="panelData__col panelData__th">Subject name</th>
                        <th class="panelData__col panelData__th">Subject type</th>
                        <th class="panelData__col panelData__th">Teacher</th>
                        <th class="panelData__col panelData__th">Teacher degree</th>
                    </tr>
                    {{#each info_data as |info|}}
                        <tr class="panelData__tr">
                            <td class="panelData__col panelData__td">{{info.major_name}}</td>
                            <td class="panelData__col panelData__td">{{info.semnumber}}</td>
                            <td class="panelData__col panelData__td">{{info.subject_name}}</td>
                            <td class="panelData__col panelData__td">{{info.subject_type}}</td>
                            <td class="panelData__col panelData__td">{{info.teacher_name}} {{info.teacher_lastname}}</td>
                            <td class="panelData__col panelData__td">{{info.teacher_degree}}</td>
                        </tr>
                    {{/each}}
                </table>
            {{/if}}
        {{/if}}
    </div>
    <script src="/src/students.js"></script>
</body>
</html>